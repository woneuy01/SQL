SELECT * FROM CUSTOMER;

SELECT * FROM CUSTOMER LIMIT 2; -- WHEN YOU WANT ONLY TWO DATA

SELECT CUSTOMER_ID, NAME FROM CUSTOMER;


SELECT
PRODUCT_ID, 
DESCRIPTION,
PRICE,
PRICE*1.07 AS TAXED_PRICE
FROM PRODUCT;

-- ; COLON IS ONLY NEEDED WHEN YOU WRITE MULTIPLE SQL COMMAND


SELECT
PRODUCT_ID,
DESCRIPTION,
PRICE AS UNTAXED_PRICE, -- COLUMN NAME CHANGE FROM PRICE TO UNTAXED_PRICE
PRICE*1.07 AS TAXED_PRICE
FROM PRODUCT;

SELECT
PRODUCT_ID,
DESCRIPTION,
PRICE,
round(PRICE*1.07,2) AS TAXED_PRICE
FROM PRODUCT;

SELECT NAME,
CITY || ','|| STATE AS LOCATION   -- ||  MEANS CONCATENATE, OHTER PLATFORM USE AS CONCAT()
FROM CUSTOMER;
/*
MULTILINE COMMNET
*/

SELECT NAME,
STREET_ADDRESS || ' ' || CITY ||',' || STATE||' ' || ZIP AS SHIP_ADDRESS
FROM CUSTOMER;



